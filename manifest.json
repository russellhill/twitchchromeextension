{
    "name": "Twitch Bar",
    "version": "1.0",
    "description": "Keep an eye on your favourite Twitch game stream counts",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
          "16": "images/icon16.png",
          "24": "images/icon24.png",
          "32": "images/icon32.png"
        },
        "default_title": "Twitch Count"
    },
    "permissions": [
        "https://twitchcount.herokuapp.com/",
        "https://static-cdn.jtvnw.net/"
    ],
    "manifest_version": 2
  }